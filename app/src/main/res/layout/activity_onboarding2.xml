<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal|center_vertical"
    android:background="@android:color/white"
    android:padding="24dp">

    <!-- Circle background with icon -->
    <FrameLayout
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/bg_light_blue"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/truck"
            android:layout_gravity="center"/>
    </FrameLayout>

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Track Your Service"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_marginTop="24dp"/>

    <!-- Subtitle -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Real-time tracking of your mechanic's location and estimated arrival time"
        android:textColor="#666666"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginTop="12dp"
        android:paddingHorizontal="16dp"/>

    <!-- Page indicators -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="32dp">

        <View
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/indicator_inactive"
            android:layout_margin="4dp"/>

        <View
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/indicator_active"
            android:layout_margin="4dp"/>

        <View
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/indicator_inactive"
            android:layout_margin="4dp"/>
    </LinearLayout>

    <!-- Next button -->
    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Next"
        android:textColor="@android:color/white"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="24dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/rounded_button"/>
</LinearLayout>
