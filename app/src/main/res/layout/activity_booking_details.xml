<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Booking Header -->
        <TextView
            android:text="Booking Details"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Booking #TM2024001"
            android:textSize="14sp"
            android:textColor="#666"
            android:layout_marginBottom="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Service Status Card -->
        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/bg_card"
            android:padding="14dp"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Service Status"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="In Progress"
                    android:textColor="@color/rose"
                    android:background="@drawable/bg_light_orange"
                    android:padding="4dp"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content" />
            </LinearLayout>

            <!-- Status list -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="● Request Accepted        2:15 PM"
                android:layout_marginTop="8dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="● Mechanic Assigned      2:20 PM"
                android:layout_marginTop="4dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="○ En Route   ETA:             10 minutes"
                android:layout_marginTop="4dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="○ Service Complete         Pending"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Service Details Card -->
        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/bg_card"
            android:padding="14dp"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Service Details"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Service Type:\t\t\t\t\t\tRoadside Repair"
                android:layout_marginTop="8dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vehicle: \t\t\t\t\t\t\t\t\t Toyota Camry 2020"
                android:layout_marginTop="4dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Problem: \t\t\t\t\t\t\t\tEngine won't start"
                android:layout_marginTop="4dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location:\t\t\t\t\t\t\t\tMain St &amp;5th Ave"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Mechanic Info Card -->
        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/bg_card"
            android:padding="14dp"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Mechanic Information"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="John Smith - Senior Mechanic · 8 years exp"
                android:layout_marginTop="8dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⭐ 4.8 (127 reviews)"
                android:layout_marginTop="4dp"/>

            <Button
                android:text="Call Mechanic"
                android:backgroundTint="#FF6600"
                android:textColor="@android:color/white"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- Cost Breakdown Card -->
        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/bg_card"
            android:padding="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Cost Breakdown"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Service Fee: $50.00"
                android:layout_marginTop="8dp"/>

            <TextView android:text="Parts (if needed): $25.00"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estimated Total: $75.00"
                android:textStyle="bold"
                android:textColor="#FF6600"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
