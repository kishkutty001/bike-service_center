<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F1A2C">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp">

        <!-- Icon -->
        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/setting"
            android:layout_marginTop="48dp"
            android:layout_marginBottom="16dp" />

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Admin Portal"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="4dp"/>

        <!-- Subtitle -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign in to manage your business"
            android:textSize="14sp"
            android:textColor="#CCCCCC"
            android:layout_marginBottom="24dp"/>

        <!-- Admin Email -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Admin Email"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_dark_input"
            android:hint="Enter admin email"
            android:hintTextColor="#99FFFFFF"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:inputType="textEmailAddress" />

        <!-- Password -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_dark_input"
            android:hint="Enter password"
            android:hintTextColor="#99FFFFFF"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:inputType="textPassword"
            android:layout_marginBottom="24dp" />

        <!-- Sign In Button -->
        <Button
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Admin Sign In"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FF6D00"
            android:textStyle="bold" />

    </LinearLayout>
</ScrollView>
