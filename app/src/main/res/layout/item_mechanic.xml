<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Profile image -->

        <!-- Name -->

        <ImageView
            android:id="@+id/imgProfile"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="23dp"
            android:backgroundTint="#EEEEEE"
            android:contentDescription="Profile Image"
            android:src="@drawable/" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/imgProfile"
            android:layout_marginStart="12dp"
            android:text="John Smith"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"/>

        <!-- Service -->
        <TextView
            android:id="@+id/tvService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvName"
            android:layout_toEndOf="@id/imgProfile"
            android:layout_marginStart="12dp"
            android:layout_marginTop="2dp"
            android:text="Engine Repair"
            android:textSize="14sp"
            android:textColor="#666666"/>

        <!-- Availability badge -->
        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/tvName"
            android:text="Available"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp"
            android:background="@drawable/bg_status_available"/>

        <!-- Rating and distance -->
        <LinearLayout
            android:id="@+id/layoutRating"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvService"
            android:layout_toEndOf="@id/imgProfile"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⭐ 4.8"
                android:textSize="13sp"
                android:layout_marginEnd="12dp"
                android:textColor="#333333"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📍 2.3 km"
                android:textSize="13sp"
                android:textColor="#333333"/>
        </LinearLayout>

        <!-- Select Mechanic Button -->
        <Button
            android:id="@+id/btnSelect"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_below="@id/layoutRating"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/btnCall"
            android:layout_marginTop="12dp"
            android:text="Select Mechanic"
            android:textAllCaps="false"
            android:backgroundTint="#FF6B00"
            android:textColor="#FFFFFF"/>

        <!-- Call Button -->
        <ImageButton
            android:id="@+id/btnCall"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignBottom="@id/btnSelect"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_button_outline"
            android:src="@drawable/ic_call"
            android:contentDescription="Call Mechanic"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>
